{
  "name": "mergesafe",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "mergesafe": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "test": "vitest run --passWithNoTests",
    "lint": "tsc -p tsconfig.json --noEmit",
    "gen:goldens": "pnpm dev -- scan ../../fixtures/node-unsafe-server --out-dir ./testdata/goldens/node-unsafe-server --format json,sarif --path-mode relative --fail-on none --engines mergesafe"
  },
  "dependencies": {
    "@mergesafe/core": "workspace:*",
    "@mergesafe/report": "workspace:*",
    "@mergesafe/rules": "workspace:*",
    "@mergesafe/sarif": "workspace:*",
    "yaml": "^2.7.0",
    "@mergesafe/engines": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.3.5"
  }
}
