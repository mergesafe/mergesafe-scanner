{
  "name": "mergesafe",
  "version": "0.1.0",
  "description": "Multi-engine MCP and repository security scanner (offline-first CLI).",
  "keywords": [
    "security",
    "scanner",
    "mcp",
    "sarif",
    "semgrep",
    "gitleaks",
    "supply-chain",
    "static-analysis"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mergesafe/mergesafe-scanner.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/mergesafe/mergesafe-scanner/issues"
  },
  "homepage": "https://github.com/mergesafe/mergesafe-scanner#readme",
  "type": "module",
  "bin": {
    "mergesafe": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup --tsconfig tsconfig.build.json",
    "postbuild": "node scripts/postbuild.mjs",
    "prepack": "npm run build",
    "test": "vitest run --passWithNoTests",
    "lint": "tsc -p tsconfig.json --noEmit"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "yaml": "^2.7.0",
    "@babel/parser": "^7.26.10",
    "@babel/traverse": "^7.26.10",
    "@babel/types": "^7.26.10"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "@mergesafe/core": "workspace:*",
    "@mergesafe/engines": "workspace:*",
    "@mergesafe/report": "workspace:*",
    "@mergesafe/rules": "workspace:*",
    "@mergesafe/sarif": "workspace:*"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  }
}
