{
  "name": "mergesafe-scanner",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "build:pkgs": "pnpm -r --filter \"./packages/**\" --if-present build",
    "test:pkgs": "pnpm -r --filter \"./packages/**\" test",
    "lint:pkgs": "pnpm -r --filter \"./packages/**\" lint",

    "build": "pnpm run build:pkgs",
    "test": "pnpm run build:pkgs && pnpm run test:pkgs",
    "lint": "pnpm run lint:pkgs"
  },
  "devDependencies": {
    "@types/node": "^20.19.33",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
